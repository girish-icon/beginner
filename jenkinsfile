pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building' 'auto deploy demo'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing' 'auto deploy demo'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying' 'auto deploy demo'
            }
        }
    }
}